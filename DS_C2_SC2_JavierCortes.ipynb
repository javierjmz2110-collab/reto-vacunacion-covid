# =========================================================
# Reto – Análisis del progreso mundial de vacunación
# =========================================================

# a) Extraer la información del archivo
import pandas as pd
import numpy as np

# Cargar archivo
df = pd.read_csv('/content/country_vaccinations.csv')

# Mostrar primeras filas
df.head()

# =========================================================
# b) Mostrar estructura y tipos de datos
# =========================================================

# Convertir columna date a datetime
df['date'] = pd.to_datetime(df['date'])

# Mostrar información del DataFrame
df.info()

# =========================================================
# c) Cantidad de vacunas aplicadas por compañía
# =========================================================

vacunas_por_compania = df.groupby('vaccines')['total_vaccinations'].sum()
vacunas_por_compania

# =========================================================
# d) Cantidad total de vacunas aplicadas en el mundo
# =========================================================

total_mundial = df['total_vaccinations'].sum()
total_mundial

# =========================================================
# e) Promedio de vacunas aplicadas por país
# =========================================================

promedio_por_pais = df.groupby('country')['total_vaccinations'].mean()
promedio_por_pais

# =========================================================
# f) Vacunas aplicadas el 29/01/2021 en todo el mundo
# =========================================================

fecha_objetivo = pd.to_datetime('2021-01-29')
vacunas_290121 = df[df['date'] == fecha_objetivo]['total_vaccinations'].sum()
vacunas_290121

# =========================================================
# g) DataFrame conDiferencias
# =========================================================

conDiferencias = df.copy()

conDiferencias['diferencias'] = (
    conDiferencias['daily_vaccinations'] -
    conDiferencias['daily_vaccinations_raw']
)

conDiferencias.head()

# =========================================================
# h) Periodo entre fecha más antigua y más reciente
# =========================================================

fecha_min = df['date'].min()
fecha_max = df['date'].max()

periodo_tiempo = fecha_max - fecha_min
periodo_tiempo

# =========================================================
# i) DataFrame conCantidad
# =========================================================

conCantidad = df.copy()

conCantidad['canVac'] = conCantidad['vaccines'].apply(
    lambda x: len(str(x).split(','))
)

conCantidad.head()

# =========================================================
# j) DataFrame antes20 (antes del 20 de diciembre de 2020)
# =========================================================

fecha_limite = pd.to_datetime('2020-12-20')
antes20 = df[df['date'] < fecha_limite]

antes20.head()

# =========================================================
# k) DataFrame pfizer
# =========================================================

pfizer = df[df['vaccines'].str.contains('Pfizer', na=False)]
pfizer.head()

# =========================================================
# l) Guardar resultados en archivo Excel
# =========================================================

with pd.ExcelWriter('resultadosReto.xlsx', engine='xlsxwriter') as writer:
    conDiferencias.to_excel(writer, sheet_name='conDiferencias', index=False)
    conCantidad.to_excel(writer, sheet_name='conCantidad', index=False)
    antes20.to_excel(writer, sheet_name='antes20', index=False)
    pfizer.to_excel(writer, sheet_name='pfizer', index=False)

print("Archivo resultadosReto.xlsx generado correctamente")
